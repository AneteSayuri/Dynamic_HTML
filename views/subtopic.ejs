<%- include('partials/header') %>

    <%- include('partials/navbar') %>
        <div class="container">

            <h1>Browsing <%= name %>...</h1>
            <p>
                <%= description %>
            </p>
            <hr>

            <% for(let pet of pets) { %>
                <article>
                    <p>
                        <b>
                            <%= pet.name %>
                        </b> -
                        <%= pet.age %>
                    </p>
                    <% if(pet.img) { %>
                        <div class="text-center">
                            <img src="<%= pet.img %>" alt="" class="rounded" width="50%">
                        </div>
                        <% } %>
                </article>
                <hr>
                <% } %>
        </div>

        <%- include('partials/footer') %>